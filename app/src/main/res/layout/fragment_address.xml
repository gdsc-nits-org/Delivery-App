<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    tools:context=".Fragments.AddressFragment">

    <LinearLayout
        android:layout_marginEnd="20sp"
        android:layout_marginTop="5sp"
        android:layout_marginStart="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backBtnAddressPage"
            android:backgroundTint="#EDECEB"
            android:layout_margin="10dp"
            app:cardCornerRadius="80sp"
            android:layout_width="35dp"
            android:layout_height="35dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/arrow_back_24px" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_gravity="center"
            android:text="Edit Address"
            android:layout_marginStart="65sp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ED5D00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:layout_height="56dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:hintEnabled="false"
            android:background="@drawable/border"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHostelNameAddressPage"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/border"
                android:hint="Hostel's Name"
                android:inputType="text"
                android:paddingLeft="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:layout_height="56dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:hintEnabled="false"
            android:background="@drawable/border"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStreetNameAddressPage"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/border"
                android:hint="Street"
                android:inputType="text"
                android:paddingLeft="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:layout_height="56dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:hintEnabled="false"
            android:background="@drawable/border"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCityAddressPage"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/border"
                android:hint="City"
                android:inputType="text"
                android:paddingLeft="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:layout_height="56dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:hintEnabled="false"
            android:background="@drawable/border"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStateNameAddressPage"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/border"
                android:hint="State"
                android:inputType="text"
                android:paddingLeft="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:layout_height="56dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:hintEnabled="false"
            android:background="@drawable/border"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCountryNameAddressPage"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/border"
                android:hint="Country"
                android:inputType="text"
                android:paddingLeft="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:layout_height="56dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:hintEnabled="false"
            android:background="@drawable/border"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPostalCodeAddressPage"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/border"
                android:hint="Postal Code"
                android:inputType="text"
                android:paddingLeft="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnSaveAddress"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/ButtonColour"
        android:text="SAVE"
        android:textColor="#FFFFFF"
        android:layout_width="336dp"
        android:layout_height="48dp"/>
</LinearLayout>

