<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mediumOrange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_top_corner_card_view"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        app:cardElevation="30000dp"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/HelloUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="left"
            android:minHeight="48dp"
            android:padding="4dp"
            android:text="Filter"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="25dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Sort Search Types"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:justifyContent="space_evenly"
                app:toggle_selectableAmount="1">

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/btnpopular"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    app:toggle_selectedBackgroundColor="@color/lightOrange"
                    app:toggle_text="Popular" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/btnnearby"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    app:toggle_selectedBackgroundColor="@color/lightOrange"
                    app:toggle_text="Nearby" />

            </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="25dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Sort pricing"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:justifyContent="space_evenly"
                app:toggle_selectableAmount="1">

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/btnlowtohign"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    app:toggle_selectedBackgroundColor="@color/lightOrange"
                    app:toggle_text="Low to High" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/btnhightolow"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    app:toggle_selectedBackgroundColor="@color/lightOrange"
                    app:toggle_text="High to Low" />

            </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="25dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Price range"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <SeekBar
            android:id="@+id/seekprice"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:progressTint="@color/lightOrange"
            android:thumbTint="@color/lightOrange" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="25dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Deliver time"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:justifyContent="space_evenly"
                app:toggle_selectableAmount="1">

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/btn10_15"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    app:toggle_selectedBackgroundColor="@color/lightOrange"
                    app:toggle_text="10-15 min" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/btn20"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    app:toggle_selectedBackgroundColor="@color/lightOrange"
                    app:toggle_text="20 min" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/btn30"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    app:toggle_selectedBackgroundColor="@color/lightOrange"
                    app:toggle_text="30 min" />

            </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/lightOrange"
            android:text="Filter"
            android:textColor="@color/black" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>